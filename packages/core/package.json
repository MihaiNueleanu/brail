{
  "name": "@brail/core",
  "version": "0.0.1",
  "main": "./dist/cjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./next-plugin": {
      "require": "./dist/cjs/lib/next-plugin.js",
      "default": "./dist/esm/lib/next-plugin/index.js"
    }
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "clean": "rimraf dist",
    "build": "pnpm run clean && npm-run-all --parallel build:*",
    "dev:esm": "tsc -p tsconfig.json -w",
    "dev:cjs": "tsc -p tsconfig.cjs.json -w",
    "dev": "npm-run-all --parallel dev:*"
  },
  "dependencies": {
    "@brail/mjml": "workspace:*",
    "next": "12.1.0",
    "react": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40"
  }
}
