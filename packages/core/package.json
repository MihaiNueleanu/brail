{
  "name": "@brail/core",
  "version": "0.0.1",
  "main": "./dist/client.js",
  "exports": {
    ".": {
      "require": "./dist/client.js",
      "default": "./dist/esm/client.js"
    },
    "./server": {
      "require": "./server.js",
      "default": "./dist/esm/server.js"
    }
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "build": "run-p build:*",
    "dev:esm": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "dev:cjs": "tsc -p tsconfig.json -w",
    "dev": "npm-run-all --parallel dev:*",
    "prepare": "run-s clean build"
  },
  "dependencies": {
    "@brail/mjml": "workspace:*",
    "next": "12.1.0",
    "react": "17.0.2",
    "webpack": "^5.70.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40"
  }
}
