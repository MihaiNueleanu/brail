{
  "name": "@brail/mjml",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "types:build": "tsc --declaration --emitDeclarationOnly -p tsconfig.json",
    "types:watch": "tsc --declaration --emitDeclarationOnly -p tsconfig.json -w",
    "compile": "swc ./src -d dist",
    "compile:watch": "swc ./src -d dist -w",
    "build": "concurrently \"pnpm run types:build\" \"pnpm run compile\"",
    "dev": "concurrently \"pnpm run types:watch\" \"pnpm run compile:watch\""
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "color": "^4.2.1",
    "glob": "^7.2.0",
    "html-minifier": "^4.0.0",
    "htmlparser2": "^7.2.0",
    "js-beautify": "^1.14.0",
    "juice": "^8.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-reconciler": "^0.26.2"
  },
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@types/glob": "^7.2.0",
    "@types/js-beautify": "^1.13.3",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "csstype": "^3.0.11"
  }
}
